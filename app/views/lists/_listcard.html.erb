<% if list.movies.empty? %>
  <div class="flip-card">
    <div class="flip-card-inner">
      <div class="flip-card-front" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('assets/tema-cinema.jpg')">
        <h2 id="card-title"><%=list.name%></h2>
      </div>
      <div class="flip-card-back">
        <p>
          Add Movies
        </p>
      </div>
    </div>
  </div>
<% else %>
  <div class="flip-card">
    <div class="flip-card-inner">
      <div class="flip-card-front" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.movies.last.poster_url %>')">
       <h2 id="card-title"><%=list.name%></h2>
      </div>
      <div class="flip-card-back">
        <p>
          <ul>
            <% list.movies.each do |movie|%>
              <li><%=movie.title%></li>
            <% end %>
          </ul>
        </p>
      </div>
    </div>
  </div>
<% end %>
