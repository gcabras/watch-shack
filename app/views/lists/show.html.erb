<div class="container mb-3">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="title-div">
        <h1 id="big-title" class="text-center"><%= @list.name %></h1>
        <%= link_to new_list_bookmark_path(@list), class: 'big-heart-button', data: { "turbo-frame": "modal" } do %>
          <i class="fa-solid fa-heart-circle-plus"
          data-controller="tooltip"
          data-bs-toggle="tooltip"
          data-bs-placement="right"
          title="Add Movie"></i>
        <% end %>
      </div>
      <div class="movie-carousel">
        <%= render 'mycarousel', list: @list %>
      </div>
    </div>
  </div>
</div>
