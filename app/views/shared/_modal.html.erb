<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal" data-action="keyup@document->modal#handleKeyup"> <!-- Clicking outside the modal will close will cause it to close -->
    <div data-action="click->modal#close"></div>
    <div>
        <%= turbo_frame_tag "modal-body" do %>
          <%= yield %>
        <% end %>
    </div>
  </div>
<% end %>
